# Environment Configuration for LMPCA Website
NODE_ENV=development

# Server Configuration
PORT=3000
FRONTEND_URL=http://localhost:3000

# Stripe Configuration (Get these from your Stripe Dashboard)
# Test keys start with pk_test_ and sk_test_
# Live keys start with pk_live_ and sk_live_
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (for receipt sending)
EMAIL_SERVICE=gmail
EMAIL_USER=your_church_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM_NAME=Light Mission Pentecostal Church of Atlanta
EMAIL_FROM_ADDRESS=giving@lmpca.org

# Church Information
CHURCH_NAME=Light Mission Pentecostal Church of Atlanta
CHURCH_ABBREVIATION=LMPCA
CHURCH_ADDRESS=123 Faith Street, Atlanta, GA 30309
CHURCH_PHONE=(555) 123-4567
CHURCH_EMAIL=info@lmpca.org
CHURCH_TAX_ID=12-3456789

# Database Configuration
DATABASE_PATH=./data/donations.db

# Security Configuration
SESSION_SECRET=your_very_secure_session_secret_here
JWT_SECRET=your_jwt_secret_for_admin_access

# Rate Limiting
MAX_DONATION_ATTEMPTS_PER_15_MIN=5
MAX_REQUESTS_PER_15_MIN=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/application.log